<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xyz.app.nlf.controllers.BookController">
    <children>
        <Label fx:id="titleLabel" text="No text." />
      <Label fx:id="idLabel" text="Label" />
      <TextField fx:id="nameTextField" promptText="Book name" />
      <TextField fx:id="quantityTextField" promptText="Quantity" />
      <HBox alignment="CENTER" spacing="21.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onSave" text="Save" />
            <Button mnemonicParsing="false" onAction="#onDelete" text="Delete" />
            <Button mnemonicParsing="false" onAction="#onNewItem" text="+" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
